                <section class="slice">
            <div class="container">
                <div class="row row-grid">
                    <div class="col-lg-3">

                        <div data-toggle="sticky" data-sticky-offset="100" data-negative-margin=".card-profile-cover">

                            <div class="card">
                                <div class="card-header py-3">
                                    <span class="h6">Paramètres</span>
                                </div>
                                <div class="list-group list-group-sm list-group-flush">
                                    <a href="account-profile.html" class="list-group-item list-group-item-action d-flex justify-content-between">
                                        <div>
                                            <i class="fas fa-user-circle mr-2"></i>
                                            <span>Mon Profil</span>
                                        </div>
                                        <div>
                                            <i class="fas fa-angle-right"></i>
                                        </div>
                                    </a>
                                    <a href="account-settings.html" class="list-group-item list-group-item-action d-flex justify-content-between">
                                        <div>
                                            <i class="fas fa-cog mr-2"></i>
                                            <span>Modifier mon Profil</span>
                                        </div>
                                        <div>
                                            <i class="fas fa-angle-right"></i>
                                        </div>
                                    </a>
                                    <a href="account-billing.html" class="list-group-item list-group-item-action d-flex justify-content-between">
                                        <div>
                                            <i class="fas fa-credit-card mr-2"></i>
                                            <span>Mes Events</span>
                                        </div>
                                        <div>
                                            <i class="fas fa-angle-right"></i>
                                        </div>
                                    </a>
                                </div>
                            </div>

                        </div>

                    </div>
                    <div class="col-lg-9">
                        <!-- Change avatar -->

                        <div class="card bg-gradient-warning border-0 shadow mb-4">
                            <div class="card-body py-3">
                                <div class="row row-grid align-items-center">
                                    <div class="col-lg-8">
                                        <div class="media align-items-center">
                                            <a href="#" class="avatar avatar-lg rounded-circle mr-3">
                                                <img alt="Image placeholder" src="../assets/img/prv/team-1-800x800.jpg">
                                            </a>
                                            <div class="media-body">
                                                <h5 class="text-white mb-0"><%= @user.first_name %></h5>
                                                
                                            </div>
                                        </div>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>


                            <!-- General -->

                            <div class="page-inner-header mb-4">
                                <h3 class="mb-1">Mon Profil Danseur</h5>

                                <p class="text-muted mb-0">Toutes tes infos en tant que danseur</p>

                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                	<h5>Prénom et nom </h5>
                                    <p><%= @user.first_name %> <%= @user.last_name %></p>
                                </div>
                                <div class="col-md-6">
                                        <h5>Blase de danseur</h5>
                                        <p><%= @user.nickname %></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                	<h5>Date d'anniversaire</h5>
                                	<p><%= @user.birthdate %></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                	<h5>Style de danse</h5>
                                    <p><%= @user.style %></p>
                                </div>
                                <div class="col-md-6">
                                	<h5>Niveau de danse</h5>
                                    <p><%= @user.level %></p>
                                </div>
                            </div>

                            <div class="pt-5 mt-5 delimiter-top">

                                <div class="page-inner-header mb-4">
                                    <h3 class="mb-1">Mon Profil Organisateur</h3>

                                    <p class="text-muted mb-0">Fill in your address info for upcoming orders or payments.</p>

                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                      <h5>Nom d'Organisateur</h5>
                                    	<p><%= @user.name %></p>
                                    </div>
                                    <div class="col-md-6">
                                        <h5>Mail de contact</h5>
                                        <p><%= @user.contact_mail %></p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <h5>Description</h5>
                                        <p><%= @user.description %></p>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <h5>Réseaux Sociaux</h5>
                                        <p><%= link_to "Facebook", @user.facebook %></p>
																				<p><%= link_to "Twitter", @user.twitter %></p>
																				<p><%= link_to "Instagram", @user.instagram %></p>
																				<p><%= link_to "Youtube", @user.youtube %></p>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <h5>Site Web</h5>
                                        <p><%= link_to "Mon site", @user.website %></p>
                                    </div>
                                </div>
                            </div>

                            <div class="pt-5 mt-5 delimiter-top">
                            	<%= link_to "Modifier mon profil", edit_user_registration_path, class: "btn btn-sm btn-primary" %>
                                <button type="button" class="btn btn-sm btn-primary">Modifier mon profil</button>
                            </div>
                            
                    </div>
                </div>
            </div>
        </section>
