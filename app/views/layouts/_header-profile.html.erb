<header class="header-account-page bg-gradient-primary d-flex align-items-end">
            <div class="container">
                <div class="row">
                    <div class=" col-lg-12">
                        <!-- Salute + Small stats -->
                        <div class="row align-items-center mb-4">
                            <div class="col-md-5 mb-4 mb-md-0">
                                <span class="h2 mb-0 text-white d-block">Bonjour <%= @user.first_name %></span>
                            </div>                           
                        </div>
                        <!-- Account navigation -->
                        <div class="d-flex">
                            <a href="<%= user_path(current_user) %>" class="btn btn-icon btn-group-nav shadow btn-secondary">
                                <span class="btn-inner--icon"><i class="fas fa-user"></i></span>
                                <span class="btn-inner--text d-none d-md-inline-block">Mon Profil</span>
                            </a>
                            <div class="btn-group btn-group-nav shadow ml-auto" role="group" aria-label="Basic example">
                                <div class="btn-group" role="group">
                                    <button id="btn-group-boards" type="button" class="btn btn-secondary btn-icon">
                                        <span class="btn-inner--icon"><i class="fas fa-calendar-check"></i></span>
                                        <span class="btn-inner--text d-none d-sm-inline-block">Mes Ev√©nements</span>
                                    </button>
                                </div>
                                <div class="btn-group" role="group">
                                    <a href="<%= edit_user_registration_path %>">
                                    <button id="btn-group-settings" type="button" class="btn btn-secondary btn-icon">
                                        <span class="btn-inner--icon"><i class="fas fa-cog mr-2"></i></span>
                                        <span class="btn-inner--text d-none d-sm-inline-block">Modifier mon profil</span>
                                    </button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</header>