<div class="mx-auto mt-3 py-3" style="width: 600px;">
<h1>Évenement</h1>
</div>

<div class="mx-auto py-3" style="width: 600px;">
	<table class="table">
  		<tbody>
	    <tr>
	      <th scope="row">Évenement</th>
	      <td><%= @event.title %></td>
	    </tr>
	    <tr>
	      <th scope="row">Description</th>
	      <td><%= @event.description %></td>
	    </tr>
	     <tr>
	      <th scope="row">Date</th>
	      <td><%= @event.start_date %></td>
	    </tr>
	    <tr>
	      <th scope="row">Lieu</th>
	      <td><%= @event.location %></td>
	    </tr>
	    <tr>
	      <th scope="row">Prix</th>
	      <td><%= @event.price %>€</td>
	    </tr>
	    <tr>
	      <th scope="row">Style(s)</th>
	      <td><%= @event.style.to_s %></td>
	    </tr>
	    <tr>
	      <th scope="row">Catégorie</th>
	      <td><%= @event.category %></td>
	    </tr>
  		</tbody>
	</table>
</div>

<div class="mx-auto py-3" style="width: 600px;">
  <% if current_user == @event.admin %>
    <button type="button" class="btn"><%= link_to "Voir les participants", event_attendance_path(@event.id), class: "btn
          btn-lg btn-info" %></button>
  <% elsif is_user_an_attendee? %>
   	<p> Tu participes déjà à cet évènement :)</p>
   <% else %>
   <button type="button" class="btn"><%= link_to "Je Participe", new_event_attendance_path(@event.id), class: "btn
          btn-lg btn-info" %></button>
  <% end %>
</div>

